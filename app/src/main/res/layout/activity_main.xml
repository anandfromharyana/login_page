<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbkg_1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/loginbkg_1"
        android:layout_marginHorizontal="50dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="30dp"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/custom_edittext"
            android:padding="24dp"

            >
            <TextView

                android:id="@+id/heading_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="@color/purple"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:layout_gravity="center|top"

                />

            <EditText

                android:id="@+id/username_txt_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/email_edit"
                android:drawablePadding="8dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:hint="username"
                android:textAlignment="center"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="50dp"
                />

            <EditText

                android:id="@+id/password_edt_1"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/password"
                android:drawablePadding="8dp"
                android:padding="15dp"
                android:textColor="@color/black"
                android:inputType="textPassword"
                android:hint="password"
                android:textAlignment="center"
                android:textColorHighlight="@color/cardview_dark_background"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                />

            <Button

                android:id="@+id/login_btn_1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN"
                android:textSize="25dp"
                android:backgroundTint="@color/purple"
                android:textAlignment="center"
                app:cornerRadius = "50dp"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView

        android:layout_marginTop="50dp"
        android:padding="8dp"
        android:text="if not registered , then signup"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
</LinearLayout>